<html>

<head>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src='../src/search.js' ></script>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <link rel="stylesheet" type='text/css' href="/css/menu.css">
  <script src='src/date.js' ></script>
</head>

<body>
  <div>
    <ul class="live-search-list">
      <div class="container-fluid">
        <% if @venues %>
          <% @venues.reverse.each do |venue| %>
            <ul>
              <div class="form-group col-lg-12">
                <div class="row">
                  <img src= "<%= venue.pictures.map(&:path).join(',')  %>" height="200" width="200" align="center"> </span>
                </div>
              </div>
              <div class="form-group col-lg-12">
                <div class="row">
                  <span ><b>Title:</b> <%= venue.title %></span>
                </div>
              </div>
              <div class="form-group col-lg-12">
                <div class="row">
                  <span><b>Address:</b> <%= venue.address   %></span>
                </div>
              </div>
              <div class="form-group col-lg-12">
                <div class="row">
                  <span><b>City:</b> <%= venue.city   %></span>
                </div>
              </div>
              <div class="form-group col-lg-12">
                <div class="row">
                  <span><b>Price:</b> <%= venue.price   %></span>
                </div>
              </div>
              <div class="form-group col-lg-12">
                <div class="row">
                  <form action="/view/<%= venue.title%>">
                    <button class='btn btn-primary' id="view" >View</button>
                  </div>
                </div>
              </form></ul>
            <%end%>
          <%else%>
        <%end%>
      </div>
    </div>
  </div>
</body>

</html>
