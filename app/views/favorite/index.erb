<head>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <link rel="stylesheet" type='text/css' href="/css/menu.css">
  <script src='../src/search.js' ></script>
</head>

<body>
<ul class="live-search-list">

    <% if @favorite_venues %>
      <% @favorite_venues.each do |venue| %>
      <ul> <br>
        <img src= "<%= venue.pictures.map(&:path).join(',')  %>" height="200" width="200" align="center"> </img>
        <br>
        <span> <b>Title:</b> <%= venue.title %></span>
        <br>
        <span><b>Address:</b> <%= venue.address   %></span>
        <br>
        <span><b>City:</b> <%= venue.city   %></span>
        <br>
        <span><b>Price:</b> <%= venue.price   %></span>
        <br>
        <span><b>Description:</b> <%= venue.description   %></span>
        <br>   </ul>
      <% end %>

  <% else %>
  You don't have any favorites!
<%end%>
</body>
